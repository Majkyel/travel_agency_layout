{
    "name": "Projekt",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "npm-run-all test:*",
        "test:html": "globstar nu-html-checker *.html",
        "init-project": "npm install && npm-run-all init:*",
        "init:dirs": "mkdirp sass css vendor images js",
        "init:files": "touch README.md index.html sass/main.scss js/script.js",
        "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
        "build": "npm-run-all build:* test",
        "build:clean": "rimraf css/*.css",
        "build:sass": "node-sass --output-style compact -o css sass",
        "build:autoprefixer": "autoprefixer-cli css/main.css",
        "build-dev:sass": "node-sass --output-style compact -o css sass",
        "watch": "npm-run-all build -p watch:*",
        "watch:sassprefixer": "onchange sass/*.scss -- npm-run-all sassprefixer:*",
        "sassprefixer:sass": "node-sass --output-style expanded --source-map true -o css sass",
        "sassprefixer:autoprefixer": "autoprefixer-cli css/main.css",
        "watch:browsersync": "browser-sync start --server --files 'css/*.css' '*.html' 'js/*.js'"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "browser-sync": "^2.24.4",
        "npm-run-all": "^4.1.3"
    },
    "devDependencies": {
        "autoprefixer-cli": "^1.0.0",
        "globstar": "^1.0.0",
        "mkdirp": "^0.5.1",
        "node-sass": "^4.9.0",
        "nu-html-checker": "^0.1.0",
        "onchange": "^4.0.0",
        "rimraf": "^2.6.2"
    }
}
